<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextArea?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="LaunchController"
            prefHeight="720.0" prefWidth="720.0"
            styleClass="main-bg">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER">
                <Label text="Create Coffee Order" style="-fx-font-size: 40px; -fx-text-fill: white;"/>
            </HBox>
            <HBox spacing="50" alignment="CENTER">
                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="shotButton" text="Extra Shot" styleClass="ingredientButton" onAction="#toggleShot"/>
                    <Button fx:id="creamButton" text="Cream" styleClass="ingredientButton" onAction="#toggleCream"/>
                    <Button fx:id="sugarButton" text="Sugar" styleClass="ingredientButton" onAction="#toggleSugar"/>
                    <Button fx:id="syrupButton" text="Syrup" styleClass="ingredientButton" onAction="#toggleSyrup"/>
                    <Button fx:id="blendButton" text="Blend" styleClass="ingredientButton" onAction="#toggleBlend"/>
                    <Button fx:id="resetButton" text="Reset" styleClass="utilityButton" onAction="#resetOrder"/>
                </VBox>
                <VBox fx:id="infoBox" alignment="CENTER" maxWidth="250" maxHeight="250">
                    <TextArea fx:id="orderDisplay"
                              wrapText="true"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="completeButton" text="Complete" styleClass="utilityButton" onAction="#completeOrder"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
